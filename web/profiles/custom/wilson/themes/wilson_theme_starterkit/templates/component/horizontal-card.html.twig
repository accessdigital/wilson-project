{% set classes = [
  'relative',
  'block',
  'w-full',
  'flex',
  'flex-row',
  link_url ? 'group' : '',
] %}

<div{{ attributes.addClass(classes) }}>
  {{ title_prefix }}
  {{ title_suffix }}

  {% if image %}
    <div class="rounded-lg overflow-hidden relative w-3/6 max-w-2xs mr-8">
      <div class="group-hover:scale-110 transition-transform duration-300 h-full descendant:!w-full descendant:!h-full descendant-img:object-cover">
        {{ image }}
      </div>
    </div>
  {% elseif icon %}
    <div class="text-4xl md:text-6xl mr-5">
      {{ icon }}
    </div>
  {% endif %}

  <div class="flex flex-col flex-grow py-2 w-3/6{% if image %} min-h-48 md:min-h-64{% endif %}">
    {% if icon and image %}
      <div class="text-4xl md:text-6xl mb-4">
        {{ icon }}
      </div>
    {% endif %}

    {% if pre_header %}
      <p class="uppercase font-semibold tracking-wider text-xs mt-0 mb-2">{{ pre_header }}</p>
    {% endif %}

    {% if headline %}
      <h3 class="font-medium text-xl lg:text-2xl mt-0 mb-4 last:mb-0">{{ headline }}</h3>
    {% endif %}

    {% if caption %}
      <p class="text-sm leading-relaxed mb-4 last:mb-0">{{ caption }}</p>
    {% endif %}

    {% if link_url %}
      <p>
        <a href="{{ link_url }}" class="after:absolute after:inset-0 border-b-0 font-semibold">{{ link_text }} <span class="inline-block group-hover:translate-x-2 transition-transform duration-300">&#8594;</span></a>
      </p>
    {% endif %}
  </div>
</div>
